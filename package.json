{
  "name": "atmmi-info-api",
  "author": {
    "name": "Salvatore Laisa",
    "email": "moebiusmania@gmail.com"
  },
  "engines": {
    "node": "16"
  },
  "version": "1.2.0",
  "main": "src/server.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/moebiusmania/atmmi-info-api.git"
  },
  "scripts": {
    "start": "NODE_ENV=production node ./src/server.js",
    "dev": "NODE_ENV=development nodemon ./src/server.js",
    "test:unit": "ava ./test/index.js --verbose",
    "lint": "xo ./src/ ./test",
    "test": "NODE_ENV=test node ./src/server.js & npm run test:unit"
  },
  "dependencies": {
    "@hapi/hapi": "20.1.5",
    "x-ray": "2.3.4"
  },
  "devDependencies": {
    "ava": "3.15.0",
    "ava-http": "1.0.0",
    "nodemon": "2.0.12",
    "xo": "0.44.0"
  },
  "xo": {
    "space": true,
    "extensions": [
      "js",
      "mjs"
    ],
    "rules": {
      "no-new-object": 0,
      "unicorn/regex-shorthand": 0
    }
  }
}
